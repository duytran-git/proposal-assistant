    "CAPTION_ONLY": {
      "placeholders": [
        {"type": "BODY", "index": 1},
        {"type": "SLIDE_NUMBER", "index": 12}
      ],
      "best_used_for": "Image-heavy slides"
    },
    "BIG_NUMBER": {
      "placeholders": [
        {"type": "TITLE", "index": 0},
        {"type": "BODY", "index": 1},
        {"type": "SLIDE_NUMBER", "index": 12}
      ],
      "best_used_for": "Metrics / KPI highlights",
      "positions": {
        "TITLE": {"left": 0.34, "top": 1.21, "width": 9.32, "height": 2.15},
        "BODY": {"left": 0.34, "top": 3.45, "width": 9.32, "height": 1.42}
      }
    },
    "BLANK": {
      "placeholders": [
        {"type": "SLIDE_NUMBER", "index": 12}
      ],
      "best_used_for": "Fully custom slides"
    }
  },
  "slide_mapping": [
    {
      "slide_number": 1,
      "title": "Cover Page",
      "layout": "TITLE",
      "placeholders": {
        "CENTER_TITLE": "[Client] x Renessai \u2013 [Project]",
