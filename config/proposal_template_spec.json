{
  "presentation": {
    "template_name": "Renessai basic template 10_2025.pptx",
    "width_inches": 10.0,
    "height_inches": 5.62,
    "aspect_ratio": "16:9",
    "template_location": "Drive / Templates / Renessai Proposal Template",
    "environment_variable": "PROPOSAL_TEMPLATE_SLIDE_ID",
    "total_slide_masters": 2
  },
  "color_scheme": {
    "theme_name": "Theme 3 - Simple Light Green",
    "colors": {
      "dark1": {"hex": "#081F09", "usage": "Primary text"},
      "light1": {"hex": "#FFFFFF", "usage": "Primary background"},
      "dark2": {"hex": "#244231", "usage": "Secondary text / headers"},
      "light2": {"hex": "#D6D1CA", "usage": "Secondary background / subtle fills"},
      "accent1": {"hex": "#EAFF01", "usage": "Primary accent (Renessai yellow-green)"},
      "accent2": {"hex": "#0D1F08", "usage": "Dark accent"},
      "accent3": {"hex": "#BBF92B", "usage": "Highlight / call-to-action"},
      "accent4": {"hex": "#7EBC00", "usage": "Success / positive indicators"},
      "accent5": {"hex": "#346D55", "usage": "Muted green accent"},
      "accent6": {"hex": "#264634", "usage": "Dark green accent"},
      "hyperlink": {"hex": "#7EBC00", "usage": "Link color"}
    },
    "rule": "Use theme color references (e.g., scheme_color='ACCENT_1'), not hardcoded hex values."
  },
  "typography": {
    "font_family": "Arial",
    "elements": {
      "titles": {"size_pt": 14, "weight": "Regular"},
      "body": {"size_pt": 14, "weight": "Regular"},
      "headings": {"size_pt": 14, "weight": "Regular"}
    },
    "rule": "Do NOT change fonts or sizes. Split across slides rather than shrinking text."
  },
  "layouts": {
    "TITLE": {
      "placeholders": [
        {"type": "CENTER_TITLE", "index": 0},
        {"type": "SUBTITLE", "index": 1},
        {"type": "SLIDE_NUMBER", "index": 12}
      ],
      "best_used_for": "Cover page (Slide 1)",
      "positions": {
        "CENTER_TITLE": {"left": 0.34, "top": 0.81, "width": 9.32, "height": 2.24},
        "SUBTITLE": {"left": 0.34, "top": 3.1, "width": 9.32, "height": 0.87}
      }
    },
    "SECTION_HEADER": {
      "placeholders": [
        {"type": "TITLE", "index": 0},
        {"type": "SLIDE_NUMBER", "index": 12}
      ],
      "best_used_for": "Section dividers"
    },
    "TITLE_AND_BODY": {
      "placeholders": [
        {"type": "TITLE", "index": 0},
        {"type": "BODY", "index": 1},
        {"type": "SLIDE_NUMBER", "index": 12}
      ],
      "best_used_for": "Standard content slides",
      "positions": {
        "TITLE": {"left": 0.34, "top": 0.49, "width": 9.32, "height": 0.63},
        "BODY": {"left": 0.34, "top": 1.26, "width": 9.32, "height": 3.74}
      }
    },
    "TITLE_AND_TWO_COLUMNS": {
      "placeholders": [
        {"type": "TITLE", "index": 0},
        {"type": "BODY", "index": 1},
        {"type": "BODY", "index": 2},
        {"type": "SLIDE_NUMBER", "index": 12}
      ],
      "best_used_for": "Comparison / side-by-side",
      "positions": {
        "TITLE": {"left": 0.34, "top": 0.49, "width": 9.32, "height": 0.63},
        "BODY_LEFT": {"left": 0.34, "top": 1.26, "width": 4.37, "height": 3.74},
        "BODY_RIGHT": {"left": 5.28, "top": 1.26, "width": 4.37, "height": 3.74}
      }
    },
    "TITLE_ONLY": {
      "placeholders": [
        {"type": "TITLE", "index": 0},
        {"type": "SLIDE_NUMBER", "index": 12}
      ],
      "best_used_for": "Custom content slides"
    },
    "ONE_COLUMN_TEXT": {
      "placeholders": [
        {"type": "TITLE", "index": 0},
        {"type": "BODY", "index": 1},
        {"type": "SLIDE_NUMBER", "index": 12}
      ],
      "best_used_for": "Narrow text with image space"
    },
    "MAIN_POINT": {
      "placeholders": [
        {"type": "TITLE", "index": 0},
        {"type": "SLIDE_NUMBER", "index": 12}
      ],
      "best_used_for": "Key takeaway / quote slides"
    },
    "SECTION_TITLE_AND_DESCRIPTION": {
      "placeholders": [
        {"type": "TITLE", "index": 0},
        {"type": "SUBTITLE", "index": 1},
        {"type": "BODY", "index": 2},
        {"type": "SLIDE_NUMBER", "index": 12}
      ],
      "best_used_for": "Section intro with context",
      "positions": {
        "TITLE": {"left": 0.29, "top": 1.35, "width": 4.42, "height": 1.62},
